<Page ux:Class="p.CreateEntry">
	<Router ux:Dependency="router" />

	<JavaScript File="CreateEntryPage.js" />

	<DockPanel>
		<Grid ColumnCount="2" Dock="Bottom">
			<c.Button Text="Cancel" Clicked="{cancel}" />
			<c.Button Text="Save" Clicked="{save}" />
		</Grid>

		<ScrollView>
			<StackPanel Padding="10" ItemSpacing="10">
				<c.Text Value="Edit entry" Font="{Resource Font.Secondary}" FontSize="24" />

				<StackPanel>
					<CaptionText>Name</CaptionText>
					<c.TextBox Value="{name}" />
				</StackPanel>

				<StackPanel>
					<CaptionText>Location</CaptionText>
					<c.TextBox Value="{location}" />
				</StackPanel>

				<Grid ColumnCount="3">
					<StackPanel Margin="0, 0, 5, 0">
						<CaptionText>Shutter speed</CaptionText>
						<c.TextBox Value="{shutterSpeed}" InputHint="Decimal" />
					</StackPanel>

					<StackPanel Margin="5, 0">
						<CaptionText>Aperture</CaptionText>
						<c.TextBox Value="{aperture}" InputHint="Decimal" />
					</StackPanel>

					<StackPanel Margin="5, 0, 0, 0">
						<CaptionText>ISO</CaptionText>
						<c.TextBox Value="{iso}" InputHint="Integer" />
					</StackPanel>
				</Grid>

				<StackPanel>
					<CaptionText>Position</CaptionText>
					<DockPanel>
						<c.TextBox Value="0, 0" />
						<c.ButtonOutlined Text="Locate me" Dock="Right" />
					</DockPanel>
				</StackPanel>

				<StackPanel>
					<CaptionText>Notes</CaptionText>
					<c.TextView Value="{notes}" TextWrapping="Wrap" />
				</StackPanel>
			</StackPanel>
		</ScrollView>
	</DockPanel>
</Page>